<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- NAVBAR (ocupa todo arriba) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Gestión de Ficheros"
        app:titleTextColor="@android:color/white" />

    <!-- CONTENIDO CON PADDING -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Espacio bajo la navbar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Botón estado -->
        <Button
            android:id="@+id/btnEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VER ESTADO DE ALMACENAMIENTO EXTERNO"
            android:layout_marginBottom="16dp" />

        <!-- EditText -->
        <EditText
            android:id="@+id/etTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Introduce texto"
            android:layout_marginBottom="24dp" />

        <!-- Espacio para centrar el bloque -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- BLOQUE CENTRAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- FILA 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="AÑADIR FICHERO" />

                <Button
                    android:id="@+id/btnVerContenido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VER FICHERO" />
            </LinearLayout>

            <!-- TEXTO DESCRIPTIVO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mover fichero a:"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp" />

            <!-- FILA 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMoverExterno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="EXTERNAL STORAGE" />

                <Button
                    android:id="@+id/btnMoverInterno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="INTERNAL STORAGE" />
            </LinearLayout>
        </LinearLayout>

        <!-- Espacio inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Botón cerrar -->
        <Button
            android:id="@+id/btnCerrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar" />

    </LinearLayout>

</LinearLayout>
